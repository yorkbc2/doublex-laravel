@import 'https://fonts.googleapis.com/css?family=Roboto'

@font-face
	font-family MainFont
	font-style normal
	src url("/css/fonts/BebasNeue Bold.ttf")
	
mainFont()
	font-family MainFont
	
halfBlack()
	background rgba(0,0,0,.5)
	
$some-color = #e91e63

body 
	background-color #fff
	color #000
	
	font-family "Roboto", sans-serif
	margin 0px 
	padding 0
	

	a
		text-decoration none

.column-description
	text-align center

.column-header
	text-align center
	font-size 1.7em

.column-image 
	text-align center
	margin 10px 0
	img 
		width 128px
		height auto
		
		&:hover 
			animation spinImage 0.5s ease-in-out forwards 


.header-button--order
	display inline-block
	color #fff
	
	padding 15px 25px
	margin 5px
	
	text-transform uppercase
	text-decoration none 
	
	// background-color #e91e63
	font-size 1.0813em
	
	border 1px solid transparent
	position relative
	overflow hidden
	z-index 111
	
	&:hover
		border-color #fff
		color #fff
		text-decoration none
		&::after
			left 100%
	
	&::after
		content ""
		width 100%
		height 100%
		position absolute
		

		top 0 
		left 0
		
		background-color #e91e63
		transition left 0.5s ease-in-out
		
		z-index -111
		



.header
	width 100%
	min-height 100vh
	
	position relative
	margin-bottom 10px
	
	.header-image
		position relative
		width 100%
		height 100%
		
		background-size cover
		background-repeat no-repeat
		background-position center
		
		min-height 100vh
		
		.header-image--filter
			min-height 100vh 
			width inherit 
			
			position relative
			
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction column
			halfBlack()
			justify-content center 
			

			.header-text
				text-align center
				
				padding 40px 0 25px 0  
				
				.header-button
					text-align center 
					margin 15px 0
				
				.header-text--description
					width 480px
					color #fff
					font-family "Roboto", sans-serif
					text-align center
					margin 20px auto 
					

					font-size 1.0813em

				.header-text--heading
					margin 0
					
					padding 20px 50px
					font-size 6.2em
					
					letter-spacing 1.3px
					line-height 130%
					
					border 2px solid #fff
					border-radius 500px
					
					display inline

					color #fff
					
					mainFont()
					





@keyframes spinImage
	0%
		transform rotate(0deg)
	25%
		transform rotate(15deg)
	50%
		transform rotate(0deg)
	75%
		transform rotate(-15deg)
	100%
		transform rotate(0deg)
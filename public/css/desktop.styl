@import 'https://fonts.googleapis.com/css?family=Roboto+Slab'

body 
	background-color #fff
	color #000
	
	font-family "Roboto Slab", serif
	margin 0px 
	padding 0
	
	background-image url("/images/texture.jpg")
	

	a
		text-decoration none


.header 
	background-color #fff
	box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
	padding 10px 40px
	position fixed
	
	top 0
	left 0
	width 100%
	
	z-index 400
	
	ul
		margin 0
		padding 0
		display inline-block
		
		li
			list-style none
			display inline-block
			
			a
				color #000 
				text-decoration none
	
.carousel-caption
	a
		color #fff
		text-decoration none
		
.pad 
	padding-top 50px
	

.search-box
	width 100%
	margin 0
	padding 0
	
	position relative
	

	.search-box--input
		
		.search-input
			
			display block
			max-width 100%
			min-width 100%
			
			padding-top 8px
			padding-bottom 8px
			
			padding-left 45px
			
			padding-right 30px
			border 1px solid #e7e7e7
			
			box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
			outline none 
			
			&:-webkit-calendar-picker-indicator
				display none
			
		.search-input--icon
			position absolute
			top 8px
			left 10px
			color #939393 
			font-size 1.4em
				
		.search-input--submit
			position absolute
			top -2px
			right 10px
			font-size 1.8em
			padding 0
			margin 0
			
			background-color transparent
			border 0 
			box-shadow none
			color #939393 
			
			&:hover
				color #333
				

.categories
	box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
	background-color #388e3c
	
	margin 10px
	ul
		margin 0
		padding 0
		
		li
			list-style none
			display inline-block
			padding 15px 20px
			
			&:hover
				background-color #48b64d
			
			a
				color #fff
				font-size 1.2em
				
			
.popular-news
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	
	flex-direction row
	flex-wrap nowrap
	
	align-items stretch
	justify-content flex-start
	.popular-item
		box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
		
		background-color #fff
		padding 10px
		margin 15px
		flex: 1 auto;
		
		width 33.3%
		
		.popular-item--header
			padding 5px 
			border-bottom 1px solid #e7e7e7
			margin-bottom 4px
			
			a
				font-size 1.05em
				color #388e3c
				
		
		.popular-item--title 
			position relative
			margin 5px 0
			&:hover
				.popular-item--commentaries
					opacity 1 
					top -35px
			h2
				font-size 1.2em
			.popular-item--commentaries
				background-color #ff3333
				padding 4px 24px
				position absolute
				
				top -25px
				color #fff 
				right 20px
				
				display inline-block
				opacity 0 
				
				transition all 0.3s ease-in-out
				
				&::after
					content ""
					position absolute
					top 100%
					left 20%
					border 6px solid #ff3333
					
					border-color #ff3333 transparent transparent transparent
			a
				color #000
				
		
		.popular-item--image
			width 100%
			min-height 120px
			max-height 140px
			overflow hidden
			img
				width 100%
				height auto